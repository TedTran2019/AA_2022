<form action=<%=cat_rental_requests_url%> method='post'>
  <select name="cat_rental_request[cat_id]" id="cat">
    <option disabled selected>--Select a cat!--</option>
    <% @cats.each do |cat| %>
      <option value=<%=cat.id%>
      <%= 'selected?' if @cat_rental_request.cat_id = cat.id %>
      ><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date</label>
  <input type="date" id='start_date' name='cat_rental_request[start_date]'
  value=<%=@cat_rental_request.start_date%>>

  <br>

  <label for="end_date">End Date</label>
  <input type="date" id='end_date' name='cat_rental_request[end_date]'
  value=<%=@cat_rental_request.end_date%>>

  <input type="submit" value='submit'>
</form>
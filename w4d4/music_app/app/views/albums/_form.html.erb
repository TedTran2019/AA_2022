<% url = (method == 'post' ? albums_url : album_url(album)) %>

<form action=<%= url %> method='post'>
  <%= auth_token %>
  <% if method == 'patch' %>
    <%= hidden_method('patch') %>
  <% end %>

  <label for="title">Title</label>
  <input id='title' type="text" name='album[title]' value='<%=album.title%>'>

  <label for="year">Year</label>
  <input id='year' type="text" name='album[year]' value='<%= album.year%>'>

  <br>

  <label for="live">Live</label>
  <input id='live'type="radio" name='album[live]' value='true'
  <%= 'checked' if album.live == true %>>
  <label for="studio">Studio</label>
  <input id='studio'type="radio" name='album[live]' value='false'
  <%= 'checked' if album.live == false%>>

  <br>

  <label for="band">Band</label>
  <select name="album[band_id]" id="band">
    <% Band.all.each do |band| %>
      <option value="<%=band.id%>"
      <%= 'selected' if band.id.to_s == params[:band_id] %>><%= band.name %></option>
    <% end %>
  </select>

  <input type="submit" value='Submit'>
</form>

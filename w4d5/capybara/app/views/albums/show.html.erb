<table class='album-table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Band</th>
      <th>Year</th>
      <th>Live</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= @album.title %></th>
      <th><%= @album.band.name %></th>
      <th><%= @album.year %></th>
      <th><%= @album.live %></th>
    </tr>
  </tbody>
</table>

<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to track.title, track_url(track) %></li>
    <%= button_to 'Remove Song', track_url(track), method: :delete %>
  <% end %>
</ul>
<%= link_to 'Add some songs!', new_album_track_url(@album) %>
<%= link_to 'Edit this album!', edit_album_url(@album) %>
<%= link_to @album.band.name, band_url(@album.band_id) %>